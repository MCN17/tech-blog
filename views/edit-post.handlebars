<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h3 class="text-center">
    Edit Post
  </h3>
  <form class="edit-post-form col-3">
    <div class="form-group">
      <div>
        <h5>Title</h5>
        <input class="form-control mb-2" name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div>
      </div>
      <button type="submit" class="btn btn-primary">Save post</button>
      <button type="button" class="delete-post-btn btn btn-primary">Delete post</button>
  </form>
</article>

<form class="comment-form col-3">
  <div>
    <h5>Comment</h5>
    <textarea class="form-control mb-2" rows="5" name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-primary mb-5">Add comment</button>
  </div>
</form>
</div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>